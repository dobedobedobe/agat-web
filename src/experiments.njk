---
title: Experiments
description: Ajaibghar Projects Page
layout: layouts/base.njk
---

<div class="font-work" x-init="console.log('Hello from Alpine.js')" class="h-screen">
    <div class="header text-center my-16 space-y-8 mx-4 md:mx-auto lg:mx-auto xl:mx-auto 2xl:mx-auto  md:w-1/3 lg:w-1/3 xl:w-1/3 2xl:w-1/3">
        <h1 class="text-5xl font-semibold">{{ title }}</h1>
        <p class="text-xl">TO BE EXPLORED</p>
    </div>
    {% set projlist = collections.projects %}

    <div class="projectlist mt-16 flex flex-col flex-wrap md:grid md:grid-cols-2 md:gap-4 lg:grid lg:grid-cols-3 lg:gap-4 xl:grid xl:grid-cols-2 xl:gap-4 2xl:grid 2xl:grid-cols-2 2xl:gap-4 md:mx-24 lg:mx-24 xl:mx-24 2xl:mx-24">
        {% for post in projlist %}
            <div class="eachproject">
                <div class="hyperlinks aspect-video">
                    <a class="text-center" href="{{ post.url | url }}" target="_blank">
                        <img src="{{ post.data.featimg }}" class="h-full w-full object-cover">
                        <p class="font-regular text-2xl mt-4 uppercase">{{ post.data.title }}</p>
                        <p class="font-semibold text-2xl">{{ post.data.projprov }}</p>
                    </a>
                </div>
                <div class="text-center font-light my-4 text-gray-400 uppercase">
                    <span class="">{{ post.data.chip_tech }}</span>
                    <span> x </span>
                    <span class="">{{ post.data.chip_culture }}</span>
                    <span> x </span>
                    <span class="">{{ post.data.chip_extra }}</span>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
</div>